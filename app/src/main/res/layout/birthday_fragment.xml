<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.ui.signup.birthday.BirthdayFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/create_account_toolbar" />

        <Space
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView_question"
            style="@style/slogan_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lines="1"
            android:padding="16dp"
            android:text="@string/whats_your_date_of_birth"
            android:textSize="28sp"
            app:autoSizeTextType="uniform" />


        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:theme="@style/date_picker_style" />

        <Space
            android:layout_width="0dp"
            android:layout_height="36dp" />

        <android.widget.Button
            android:id="@+id/button_birthday_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_next_button"
            android:backgroundTint="@drawable/tint_next_button"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>