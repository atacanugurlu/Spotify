<?xml version="1.0" encoding="utf-8"?>
<resources>


    //Text styles

    <style name="slogan_text_style">
        <item name="fontFamily">
            @font/gotham_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="message_text_style">
        <item name="fontFamily">
            @font/gotham_book</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="recaptcha_text_style">
        <item name="fontFamily">
            @font/gotham_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="trending_album_name_text_style">
        <item name="fontFamily">
            @font/gotham_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="trending_album_artist_text_style">
        <item name="fontFamily">
            @font/gotham_book</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>


    //Button text styles

    <style name="continue_button_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">
            @font/gotham_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="signup_button_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">
            @font/gotham_medium</item>
        <item name="android:textColor">@color/spotify_black</item>
    </style>

    <style name="gender_button_text_style">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">
            @font/gotham_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="library_button_text_style">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">
            @font/gotham_book</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    //Assets

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="date_picker_style">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="bottom_navigation">
        <item name="android:background">@drawable/bg_bottom_navigation</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>


</resources>